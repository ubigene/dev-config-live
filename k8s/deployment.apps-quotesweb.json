{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "quotesweb"
        },
        "name": "quotesweb"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "quotesweb"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "quotesweb"
                }
            },
            "spec": {
                "containers": [
                    {
                        "image": "quay.io/eugene_butan/quotesweb:v2",
                        "imagePullPolicy": "Always",
                        "name": "quotesweb",
                        "ports": [
                            {
                                "containerPort": 3000,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "1",
                                "memory": "750Mi"
                            },
                            "requests": {
                                "cpu": "10m",
                                "memory": "64Mi"
                            }
                        }
                    }
                ]
            }
        }
    }
}