{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "quotes"
        },
        "name": "quotes"
    },
    "spec": {
        "replicas": 2,
        "selector": {
            "matchLabels": {
                "app": "quotes"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "quotes"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "DB_USER",
                                "value": "root"
                            },
                            {
                                "name": "DB_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "password",
                                        "name": "mysqlpassword"
                                    }
                                }
                            },
                            {
                                "name": "DB_NAME",
                                "value": "quotesdb"
                            },
                            {
                                "name": "DB_SERVICE_NAME",
                                "value": "mysql"
                            },
                            {
                                "name": "DB_PORT",
                                "value": "3306"
                            },
                            {
                                "name": "MISSION",
                                "value": "Try harder!"
                            }
                        ],
                        "image": "quay.io/eugene_butan/quotes:v7",
                        "imagePullPolicy": "Always",
                        "name": "quotes",
                        "ports": [
                            {
                                "containerPort": 10000,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "100m",
                                "memory": "950Mi"
                            },
                            "requests": {
                                "cpu": "10m",
                                "memory": "64Mi"
                            }
                        }
                    }
                ]
            }
        }
    }
}